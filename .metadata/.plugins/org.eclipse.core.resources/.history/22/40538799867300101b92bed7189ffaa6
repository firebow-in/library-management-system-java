package com.lms;

public class Main {
    public static void main(String[] args) {
        Library library = new Library();

        // Add some books
        library.addBook(new Book("B1", "Java Programming", "James Gosling"));
        library.addBook(new Book("B2", "Python Essentials", "Guido van Rossum"));

        // Add some users
        library.addUser(new User("U1", "Alice"));
        library.addUser(new User("U2", "Bob"));

        // Issue book
        System.out.println("Issuing book...");
        boolean issued = library.issueBook("B1", "U1");
        System.out.println("Issued: " + issued); // true

        // Try to issue again
        issued = library.issueBook("B1", "U2");
        System.out.println("Issued: " + issued); // false, already issued

        // Return book
        System.out.println("Returning book...");
        boolean returned = library.returnBook("U1");
        System.out.println("Returned: " + returned); // true
    }
}
