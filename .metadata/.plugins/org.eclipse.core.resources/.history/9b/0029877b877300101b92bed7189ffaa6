package com.lms;

import java.util.ArrayList;
import java.util.List;

public class Library {

    private List<Book> books;
    private List<User> users;

    public Library() {
        books = new ArrayList<>();
        users = new ArrayList<>();
    }

    // Add a book only if it does not already exist (by ID)
    public boolean addBook(Book book) {
        if (findBookById(book.getId()) == null) {
            books.add(book);
            return true;
        }
        return false; // Book with this ID already exists
    }

    // Add a user only if it does not already exist (by ID)
    public boolean addUser(User user) {
        if (findUserById(user.getUserId()) == null) {
            users.add(user);
            return true;
        }
        return false; // User with this ID already exists
    }

    // Find a book by its ID
    public Book findBookById(String bookId) {
        for (Book book : books) {
            if (book.getId().equals(bookId)) return book;
        }
        return null;
    }

    // Find a user by their ID
    public User findUserById(String userId) {
        for (User user : users) {
            if (user.getUserId().equals(userId)) return user;
        }
        return null;
    }    

    // Issue a book to a user
    public boolean issueBook(String bookId, String userId) {
        Book book = findBookById(bookId);
        User user = findUserById(userId);
        if (book != null && user != null && !book.isIssued() && user.getIssuedBook() == null) {
            user.issueBook(book);
            return true;
        }
        return false;
    }

    // Return a book from a user
    public boolean returnBook(String userId) {
        User user = findUserById(userId);
        if (user != null && user.getIssuedBook() != null) {
            user.returnBook();
            return true;
        }
        return false;
    }
    
    // Getter for all books (for display in console)
    public List<Book> getBooks() {
        return books;
    }

    // Getter for all users (for display in console)
    public List<User> getUsers() {
        return users;
    }
}
