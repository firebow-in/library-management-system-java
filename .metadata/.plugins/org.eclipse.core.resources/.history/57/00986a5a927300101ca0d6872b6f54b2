public class Main {
    public static void main(String[] args) {
        Library library = new Library();

        // Add books
        library.addBook(new Book("B1", "Java Programming", "James Gosling"));
        library.addBook(new Book("B2", "Python Essentials", "Guido van Rossum"));

        // Add users
        library.addUser(new User("U1", "Alice"));
        library.addUser(new User("U2", "Bob"));

        // Show initial state
        library.listAllBooks();
        library.listAllUsers();

        // Issue a book
        System.out.println("\n Issuing Book B1 to U1...");
        library.issueBook("B1", "U1");

        // Try issuing same book again
        System.out.println("\n Trying to issue Book B1 to U2...");
        library.issueBook("B1", "U2");

        // Return book
        System.out.println("\n Returning Book from U1...");
        library.returnBook("U1");

        // Final state
        System.out.println("\n Final Book Status:");
        library.listAllBooks();
        System.out.println("\n Final User Status:");
        library.listAllUsers();
    }
}
